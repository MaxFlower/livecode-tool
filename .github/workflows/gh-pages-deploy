name: GHPages Deploy CI

on:
  # Triggers the workflow on push only for the "master" branch
  push:
    branches: [ "master" ]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # Checks-out your repository under $GITHUB_WORKSPACE, so your job can access it
      - name: checkout
        uses: actions/checkout@v3
      
      - uses: actions/setup-node@v3
        with:
          node-version: 16
        
      - name: install dependencies & build files
        run: |
          npm install  
          npm run build
     
      - name: Deploy ðŸš€
        uses: MaxFlower/github-pages-deploy-action@v4
        with:
          branch: gh-pages
          folder: dist
        
